# server settings
PORT=3000

# blog settings
BLOG_TITLE=Code Notes
BLOG_DESCRIPTION=A collection of programming notes and tutorials
BLOG_URL=http://localhost:3000
BLOG_AUTHOR=Developer
ASCII_TITLE_PATH=/static/ascii-title.txt

# social links (optional)
BLOG_GITHUB=codenotesdev
BLOG_TWITTER=@codenotesdev

# show/hide nav links (default: shown)
SHOW_RSS=true
SHOW_GITHUB=true
SHOW_TWITTER=true

# rss feed settings (optional, defaults to blog settings)
RSS_TITLE=Code Notes RSS Feed
RSS_DESCRIPTION=Latest programming tutorials and notes
RSS_LANGUAGE=en

# open graph defaults
OG_IMAGE=/static/og-image.png

# favicon settings (in order of preference)
FAVICON_SVG=/static/favicon.svg                                   # SVG file path
#FAVICON_PATH=/static/favicon.ico                                # ICO/PNG file path
#FAVICON_BASE64=data:image/svg+xml;base64,PHN2ZyB4bWxucz0...    # Base64 encoded image

# theme
THEME_FONT_FAMILY="IBM Plex Mono", "Fira Mono", SFMono-Regular, Menlo, monospace
THEME_BACKGROUND=#111111
THEME_TEXT=#cccccc
THEME_LINK=#0066cc

# features
PAGINATION_LIMIT=10
PREVIEW_DRAFTS=false
